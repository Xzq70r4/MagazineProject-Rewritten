@using MagazineProject.Common
@model MagazineProject.Web.Models.InputModels.Base.Post.BaseAutorizationPostViewModel

@if (ViewContext.Controller.ValueProvider.GetValue("action").RawValue.ToString() != GlobalConstants.EditAction)
{
    @Html.EditorFor(m => m.CategoryId, new { ListItem = Model.Categories })
}

@Html.EditorFor(m => m.UploadedImage)
@Html.EditorFor(m => m.Title)
@Html.EditorFor(m => m.UrlVideo)
@Html.EditorFor(m => m.Content)

<br/>
@Html.ValidationSummary("", new { @class = "text-danger" })



