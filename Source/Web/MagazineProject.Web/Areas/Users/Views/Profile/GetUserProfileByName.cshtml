@model MagazineProject.Web.Models.Area.Users.UserProfiles.UserProfileViewModel


@{
    ViewBag.Title = Model.UserName + " Profile";
}

<div class="row">
    <div class="col-md-12 ">
        <div class="panel panel-default">

            <div class="panel-heading">
                <h2 class=" text-primary">
                    @Model.UserName
                </h2>
            </div>

            @Html.Partial("_ProfilePartial")

        </div>
    </div>
</div>

<div class="row">
    <div>
        @Html.ActionLink(@Model.UserName + "`s Posts", "Index", "UserPosts", new { userName = Model.UserName }, new { @class = "btn btn-primary btn-block", area = "Users" })
        @Html.ActionLink(@Model.UserName + "`s Comments", "Index", "UserComments", new { userName = Model.UserName }, new { @class = "btn btn-primary btn-block", area = "Users" })
    </div>
</div>