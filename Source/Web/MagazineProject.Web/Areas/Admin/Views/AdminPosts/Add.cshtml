@using MagazineProject.Web.Infrastructure.HtmlHelpers
@model MagazineProject.Web.Models.Area.Admin.InputViewModels.Post.AdminAddPostViewModel

@{
    ViewBag.Title = "Add Post";
}

@section styles
{
    @Styles.Render("~/Content/file-input")
}

@Html.Raw(TempData["Message"])

@using (Html.BeginForm("Add", "AdminPosts", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <fieldset>
        <div class="well">

            <legend>
                <h2>Add Post</h2>
            </legend>

            @Html.Partial("_AdministrationPostPartial", Model)

        </div>

        <div class="row">
            <div class="col-xs-4 text-right">
                @Html.ActionLink("Cancel", "Index", "AdminPosts", new { area = "Admin" }, new { @class = "btn btn-default", type = "reset" })
            </div>
            <div class="col-md-7 text-left">
                @Html.Submit("Save")
            </div>
        </div>

    </fieldset>
}

@section Scripts{
    @Scripts.Render("~/bundles/post-add-edit")
}
