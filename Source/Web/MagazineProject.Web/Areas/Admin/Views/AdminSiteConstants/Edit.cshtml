@using MagazineProject.Web.Infrastructure.HtmlHelpers
@model MagazineProject.Web.Models.Area.Admin.InputViewModels.SiteConstant.AdminEditSiteConstantViewModel

@{
    ViewBag.Title = "Edit Category";
}

@Html.Raw(TempData["Message"])


@using (Html.BeginForm("Edit", "AdminSiteConstants", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <fieldset>
        <div class="well">
            <legend>
                <h2>Edit Category</h2>
            </legend>
            @Html.EditorFor(m => m.Value)
            <div class="row form-group">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.Description, new { @class = "text-primary" })
                </div>
                <div class="col-md-5">
                    <b>@Model.Description</b>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4 text-right">
                @Html.ActionLink("Cancel", "Index", "AdminSiteConstants", new { area = "Admin" }, new { @class = "btn btn-default", type = "reset" })
            </div>
            <div class="col-md-7 text-left">
                @Html.Submit("Save")
            </div>
        </div>
    </fieldset>
}

@section Scripts{
    @Scripts.Render("~/bundles/category-add-edit")
}