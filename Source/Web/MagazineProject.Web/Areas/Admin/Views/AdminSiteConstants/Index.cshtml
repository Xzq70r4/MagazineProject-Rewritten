@model IQueryable<MagazineProject.Web.Models.Area.Grid.GridSiteConstantViewModel>

@using GridMvc.Html

@{
    ViewBag.Title = "Site Constant`s Grid";
}

@section Styles{
    @Styles.Render("~/Content/grid")
}

@Html.Raw(TempData["Message"])

<div>
    @(Html.Grid(Model).Columns(columns =>
          {
              columns.Add(c => c.Description).Titled("Description").Filterable(true);

              columns.Add(c => c.Value).Titled("Value").Filterable(true);

              columns.Add().Titled("Edit").Sanitized(false).Encoded(false).RenderValueAs(o => Html.ActionLink("Edit", "Edit", new { id = o.Id }).ToHtmlString()).SetWidth(10);
          }).WithPaging(10).Sortable(true))
</div>

@section scripts
{
    @Scripts.Render("~/bundles/gridmvc")
}