@using MagazineProject.Common
@model MagazineProject.Web.Models.InputModels.Base.Post.BaseAdministrationPostsViewModels

@if (ViewContext.Controller.ValueProvider.GetValue("action").RawValue.ToString() != GlobalConstants.EditAction)
{
    @Html.EditorFor(m => m.CategoryId, new { ListItem = Model.Categories })
}
@Html.EditorFor(m => m.Status)
@Html.EditorFor(m => m.Title)
