@using System
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport"
          content="width=device-width,
               initial-scale=1.0,
               maximum-scale=1.0,
               user-scalable=no" />
    <meta charset="utf-8"/>

    <link href="@Url.Content("~/favicon.ico")"
          rel="shortcut icon"/>
    <title>@ViewBag.Title - Magazine Project</title>

    @Styles.Render("~/Content/basic")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>
<div class="navbar navbar-default navbar-static-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Magazine Project", "Index", "Home", new { area = string.Empty }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @Html.Action("CategoryNavigation", "Categories", new { area = string.Empty })
                @if (User.IsInRole("Admin"))
                {
                @*<li>
                    Administration
                    <ul>
                        <li>@Html.ActionLink("Categories", "Add", "WriterPosts", new { area = "Writer" }, null)</li>
                    </ul>
                </li>*@
                }
            </ul>

            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<div class="container">
    @RenderBody()
    <hr/>
    <footer>
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1 text-center">
                <h4>
                    <link href="~/favicon.ico"
                          rel="shortcut icon" type="image/x-icon" />
                    <strong>About the creator</strong>
                </h4>
                <ul class="list-unstyled">
                    <li>
                        <i class="fa fa-envelope-o fa-fw"></i> <a href="mailto:vasil.dimov.work@gmail.com">vasil.dimov.work@gmail.com</a>
                    </li>
                </ul>
                <br>
                <ul class="list-inline">
                    <li>
                        <a href="https://github.com/Xzq70r4/MagazineProject-Rewritten"><i class="fa fa-github fa-fw fa-3x"></i></a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-linkedin fa-fw fa-3x"></i></a>
                    </li>
                </ul>
                <hr class="small">
                <p>&copy; @DateTime.Now.Year - Magazine Project</p>
            </div>
        </div>
    </footer>
</div>


@Scripts.Render("~/bundles/basic")
@RenderSection("scripts", required: false)
</body>
</html>
