@using System.Linq
@model PostDetailsViewModel
@{
    ViewBag.Title = "DetailsView" + Model.Title;
}

@Html.Raw(TempData["Message"])

<hr />
<div class="row">
    <div class="col-md-12">
        <div>
            <strong>Author: </strong> @Model.AuthorName
            <p class="pull-right"><i class="fa fa-clock-o"></i> Posted on @Model.TimeCreated</p>
        </div>
    </div>
</div>
<hr />
<br/>

<div class="well">
    <h4>Category: @Model.CategoryName</h4>

    <div class="row">
        <div class="col-md-10 col-lg-10 col-sm-10 col-xs-12 pull-right">
            <h1 class="text-center word-break">@Model.Title</h1>
            <br/>
            <article>
                <div class="word-break">
                    @Html.Raw(@Model.Content)
                </div>
            </article>
        </div>
    </div>
</div>
<br/>
<div class="row">
    <div class="col-md-12 ">
        <div class="embed-responsive embed-responsive-16by9 ">
            <iframe src="@Model.UrlVideo"></iframe>
        </div>
    </div>
</div>
<br/>
@if (User.Identity.IsAuthenticated)
{
    <hr/>
    <div class="row">
        <div class="col-md-12 text-right">
            <i class="fa fa-plus-circle"></i>
            @Html.ActionLink("Add Comment", "AddComment", "Comments", new { id = Model.Id }, new { area = string.Empty })
        </div>
    </div>
    <hr />
}

<div id="comments" class="row">
    <div class="col-md-12">
        <section class="comment-list">
            @Html.Action("GetPostComments", "Comments", new {id = Model.Id})
        </section>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryAjax")
}
